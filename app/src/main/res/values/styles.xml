<resources>

    <style name="Base.Theme.IKan.Light" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowBackground">@color/theme_main_window_background</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarSize">50dp</item>
        <item name="colorPrimaryDark">@color/grey5</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorSwitchThumbNormal">@color/colorAccent</item>
        <item name="android:colorForeground">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.IKan.Light" parent="@style/Base.Theme.IKan.Light" />

    <style name="Theme.IKan.Light.NoActionBar" parent="@style/Theme.IKan.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Theme.IKan.Launcher" parent="@style/Theme.IKan.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_drawable</item>
    </style>

    <style name="Theme.IKan.Slide" parent="@style/Theme.IKan.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/SlideAnimation</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="SlideAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_right_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

    <style name="Widget.IKan" parent="@android:style/Widget" />

    <style name="Widget.Account" parent="@style/Widget.IKan" />

    <style name="Widget.Account.Item" parent="@style/Widget.Account">
        <item name="android:textSize">@dimen/title_size_secondary</item>
        <item name="android:textColor">@color/title_color_secondary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:background">@drawable/item_bg_selector_primary</item>
    </style>

    <style name="Widget.Login.Btn.Primary" parent="@style/Widget.IKan">
        <item name="android:textSize">@dimen/title_size_secondary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:text">@string/account_login</item>
        <item name="android:background">@drawable/account_login_btn_bg</item>
    </style>

    <style name="Widget.Logout.Btn" parent="@style/Widget.IKan">
        <item name="android:textSize">@dimen/title_size_secondary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:text">@string/account_logout</item>
        <item name="android:background">@drawable/account_logout_btn_bg</item>
    </style>

    <style name="Widget.Setting" parent="@style/Widget.IKan" />

    <style name="Widget.Setting.Group" parent="@style/Widget.Setting">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="Widget.Setting.Item" parent="@style/Widget.Setting">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/setting_item_height</item>
        <item name="android:paddingStart">@dimen/setting_item_padding_start</item>
        <item name="android:paddingEnd">@dimen/setting_item_padding_end</item>
        <item name="android:background">@drawable/item_bg_selector_primary</item>
    </style>

    <style name="Widget.Setting.Item.Title" parent="@style/Widget.Setting">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/title_size_secondary</item>
        <item name="android:textColor">@color/title_color_secondary</item>
    </style>

    <style name="Widget.Setting.Item.Des" parent="@style/Widget.Setting" />

    <style name="Widget.Feed" parent="@style/Widget.IKan" />

    <style name="Widget.Feed.Title" parent="@style/Widget.Feed">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/title_color_secondary</item>
        <item name="android:textSize">@dimen/title_size_secondary</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="Widget.Feed.Introduction" parent="@style/Widget.Feed.Des">
    </style>

    <style name="Widget.Feed.Des" parent="@style/Widget.Feed">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/title_color_tertiary</item>
        <item name="android:textSize">@dimen/title_size_tertiary</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="Widget.Feed.Actors" parent="@style/Widget.Feed.Des">
    </style>

    <style name="Widget.Feed.Detail" parent="@style/Widget.Feed" />

    <style name="Widget.Feed.Detail.Action" parent="@style/Widget.Feed.Detail">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Widget.Feed.Detail.Account" parent="@style/Widget.Feed.Detail"/>

    <style name="Widget.Feed.Detail.Account.Nickname" parent="@style/Widget.Feed.Detail.Account">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/title_color_secondary</item>
        <item name="android:textSize">@dimen/title_size_secondary</item>
    </style>

    <style name="Widget.Feed.Detail.Account.Des" parent="@style/Widget.Feed.Detail.Account">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/title_color_tertiary</item>
        <item name="android:textSize">@dimen/title_size_tertiary</item>
    </style>

    <style name="Widget.Feed.Discover.Action" parent="@style/Widget.Feed.Detail">
        <item name="android:layout_height">@dimen/feed_list_action_size</item>
        <item name="android:layout_width">@dimen/feed_list_action_size</item>
    </style>

    <style name="Widget.Switch" parent="@style/Widget.IKan">
        <item name="colorControlActivated">@color/primary_blue</item>
        <item name="colorSwitchThumbNormal">#FFF1F1F1</item>
        <item name="android:colorForeground">#FF2F2F2F</item>
    </style>

    <style name="Assets" parent="@style/Widget.IKan"/>

    <style name="Assets.Recharge" parent="@style/Assets">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="atg_borderColor">@color/primary_yellow</item>
        <item name="atg_textColor">#49C120</item>
        <item name="atg_backgroundColor">#FFFFFF</item>
        <item name="atg_dashBorderColor">@color/primary_yellow</item>
        <item name="atg_inputHintColor">#80000000</item>
        <item name="atg_inputTextColor">#DE000000</item>
        <item name="atg_checkedBorderColor">@color/primary_yellow</item>
        <item name="atg_checkedTextColor">@color/title_color_primary</item>
        <item name="atg_checkedMarkerColor">@color/primary_yellow</item>
        <item name="atg_checkedBackgroundColor">@color/primary_yellow</item>
        <item name="atg_pressedBackgroundColor">@color/primary_yellow</item>
        <item name="atg_borderStrokeWidth">0.75dp</item>
        <item name="atg_textSize">13sp</item>
        <item name="atg_horizontalSpacing">10dp</item>
        <item name="atg_verticalSpacing">10dp</item>
        <item name="atg_horizontalPadding">12dp</item>
        <item name="atg_verticalPadding">5dp</item>
    </style>

    <style name="Popup.Light" parent="Widget.AppCompat.ListPopupWindow">
        <item name="android:popupBackground">@color/white</item>
    </style>


    <style name="UpdateAppNumberProgressBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>

        <item name="progress_max">100</item>
        <item name="progress_current">0</item>

        <item name="progress_unreached_color">#CCCCCC</item>
        <item name="progress_reached_color">#e94339</item>

        <item name="progress_text_size">12sp</item>
        <item name="progress_text_color">#e94339</item>

        <item name="progress_reached_bar_height">4dp</item>
        <item name="progress_unreached_bar_height">3dp</item>
    </style>

    <style name="UpdateAppDialog" parent="android:style/Theme.Dialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowEnterAnimation">@anim/update_app_window_in</item>
        <item name="android:windowExitAnimation">@anim/update_app_window_out</item>
    </style>

</resources>
