<?xml version="1.0" encoding="utf-8"?>
<resources>
    <item name="v4_dialog_header" type="id" />
    <item name="v4_dialog_content" type="id" />
    <item name="v4_dialog_footer" type="id" />
    <item name="v4_dialog_title" type="id" />
    <item name="v4_dialog_message" type="id" />
    <item name="v4_dialog_cancel" type="id" />
    <item name="v4_dialog_action_positive" type="id" />
    <item name="v4_dialog_action_negative" type="id" />

    <color name="v4_dialog_bg">#ffffff</color>
    <color name="v4_dialog_title">#de000000</color>
    <color name="v4_dialog_message">#8a000000</color>
    <color name="v4_dialog_action_text">@color/primary_dark</color>

    <dimen name="v4_dialog_header">62dp</dimen>
    <dimen name="v4_dialog_footer">48dp</dimen>
    <dimen name="v4_dialog_width">260dp</dimen>
    <dimen name="v4_dialog_min_width">240dp</dimen>
    <dimen name="v4_dialog_min_height">120dp</dimen>
    <dimen name="v4_dialog_content_width">240dp</dimen>
    <dimen name="v4_dialog_title_text">20sp</dimen>
    <dimen name="v4_dialog_message_text">14sp</dimen>
    <dimen name="v4_dialog_action_text">14sp</dimen>
    <dimen name="v4_dialog_padding">10dp</dimen>
    <dimen name="v4_dialog_padding_top">20dp</dimen>
    <dimen name="v4_dialog_padding_bottom">20dp</dimen>
    <dimen name="v4_dialog_padding_left">24dp</dimen>
    <dimen name="v4_dialog_padding_right">24dp</dimen>
    <dimen name="v4_dialog_footer_margin_bottom">16dp</dimen>

    <style name="V4_Dialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="V4.Dialog.Simple" parent="V4_Dialog">
    </style>

    <style name="V4.Dialog.Simple.Action">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/title_color_primary</item>
    </style>

    <style name="V4_Dialog.Action">
        <item name="android:background">@drawable/item_bg_selector_primary</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:paddingLeft">11dp</item>
        <item name="android:paddingRight">11dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@color/v4_dialog_action_text</item>
        <item name="android:textSize">@dimen/v4_dialog_action_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="v4_secondary_title">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#f8f8f8</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#42000000</item>
    </style>

    <style name="Dialog_Action">
        <item name="android:background">@drawable/btn_selector</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:paddingLeft">11dp</item>
        <item name="android:paddingRight">11dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--************************************** Dialog *******************************************-->
    <style name="V4_Simple_Dialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

</resources>